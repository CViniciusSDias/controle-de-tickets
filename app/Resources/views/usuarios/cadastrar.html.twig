{% extends 'layout.html.twig' %}

{% block titulo %}Cadastrar{% endblock %}
{% block subtitulo %}Usuário{% endblock %}

{% block conteudo %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Novo Usuário</h3>
                </div>

                {{ form_start(form) }}
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(form.nome, 'Nome') }}
                        {{ form_widget(form.nome, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.email, 'E-mail') }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.senha, 'Senha') }}
                        {{ form_widget(form.senha, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="box-footer">
                    {{ form_widget(form.salvar, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}