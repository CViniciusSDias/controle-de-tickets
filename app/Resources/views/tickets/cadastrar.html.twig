{% extends 'layout.html.twig' %}

{% block titulo %}Cadastrar{% endblock %}
{% block subtitulo %}Ticket{% endblock %}

{% block conteudo %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {% if not temErro is defined %}
            <div class="callout callout-info">
                <h4>Dica!</h4>

                <p>
                    Utilize o campo de descrição para explicar melhor seu problema.
                    Detalhe o que você estava fazendo quando o erro ocorreu,
                    e que tipo de mensagem apareceu, por exemplo.
                </p>
            </div>
            {% endif %}

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Novo Ticket</h3>
                </div>

                <form action="{{ path('inserir_ticket') }}" role="form" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="titulo-ticket">Título:</label>
                            <input type="text" class="form-control" id="titulo-ticket" name="titulo-ticket"
                               required>
                        </div>

                        <div class="form-group">
                            <label for="descricao-titcket">Descrição:</label>
                            <textarea name="descricao-ticket" id="descricao-titcket" class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="categoria-ticket">Categoria:</label>
                            <select name="categoria-ticket" id="categoria-ticket" class="form-control" required>
                                <option value="">Selecione</option>
                            {% for categoria in categorias %}
                                <option value="{{ categoria.id }}">{{ categoria.nome }}</option>
                            {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}